# Redis Cache Configuration for Hotel Management System

# Enable Redis as the default cache driver
CACHE_STORE=redis

# Redis connection settings
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Redis database assignments
REDIS_DB=0
REDIS_CACHE_DB=1

# Queue configuration (optional but recommended for background cache warming)
QUEUE_CONNECTION=redis

# Cache configuration
CACHE_PREFIX=hms_cache
REDIS_PREFIX=hms

# Performance settings
REDIS_PERSISTENT=false
REDIS_CLUSTER=redis
